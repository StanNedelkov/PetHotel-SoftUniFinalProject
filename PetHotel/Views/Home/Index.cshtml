@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome the final layout in not finnished</h1>
    <section class="home-page">
        @if (this.User?.Identity?.IsAuthenticated ?? false)
        {
            <h1 class="display-4">@this.User.Identity.Name</h1>

            @if (this.User?.IsInRole(PetHotel.Common.GlobalConstants.AdministratorRoleName) ?? false)
            {
                <h1 class="display-4"> You have admin rights</h1>
            }
            @if (this.User?.IsInRole(PetHotel.Common.GlobalConstants.UserRoleName) ?? false)
            {
                <h1 class="display-4"> You have user rights</h1>
                <a class="nav-link text-dark" asp-area="Client" asp-controller="Pet" asp-action="Create">Add a new pet</a>
                <a class="nav-link text-dark" asp-area="Client" asp-controller="User" asp-action="MyPets">Make a reservation</a>
                <a class="nav-link text-dark" asp-area="Client" asp-controller="Hotel" asp-action="AllMine" >My checked in pets</a>
                <a class="nav-link text-dark" asp-area="Client" asp-controller="Image" asp-action="UploadNewImage">Upload to gallery</a>
                <a class="nav-link text-dark" asp-area="Client" asp-controller="Gallery" asp-action="DisplayGallery">Gallery</a>
            }

        }
    </section>
  
</div>
