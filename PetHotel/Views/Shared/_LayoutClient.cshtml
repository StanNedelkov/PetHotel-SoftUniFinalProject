@using PetHotel.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetHotel.styles.css" asp-append-version="true" />
    @*    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>*@
    <style>
        body {
            background: linear-gradient(to top left, #7393B3, #DE3163);
            background-repeat: cover;
            color: black;
        }

        .card {
            /* Add shadows to create the "card" effect */
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }
            /* On mouse-over, add a deeper shadow */
            .card:hover {
                box-shadow: 0 16px 32px 0 #0a0603;
            }
        /* Add some padding inside the card container */
        .container {
            padding: 4px 32px;
        }

        .btn {
            display: inline-block;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            border: none;
            border-radius: 30px;
            box-shadow: 0 5px #999;
        }
        
        .button:active {
            /*  background-color: #3e8e41;*/
            box-shadow: 0 4px #666;
            transform: translateY(4px);
        }

        

            li a {
                display: block;
                color: #90EE90;
                text-align: center;
                padding: 1px 1px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: lightgrey;
                }

        .footer {
            position: relative;
            right: 0;
            bottom: 0;
            left: 0;
            padding: 5px;
            background-color: green;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-#90EE90 box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PetHotel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Employee" asp-controller="Hotel" asp-action="ControlMenu">Manage reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Employee" asp-controller="Image" asp-action="UploadNewImage">Upload To Gallery</a>
                        </li>
                       
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container position-relative">
            &copy; 2022 - PetHotel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>