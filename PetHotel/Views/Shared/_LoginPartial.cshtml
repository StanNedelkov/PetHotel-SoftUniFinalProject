@using Microsoft.AspNetCore.Identity
@using PetHotel.Infrastructure.Data.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Client" asp-controller="User" asp-action="Profile">Profile</a>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-area="Client" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                <button type="submit" class="nav-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Client"  asp-controller="User" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Client" asp-controller="User" asp-action="Login">Login</a>
    </li>
}
</ul>
