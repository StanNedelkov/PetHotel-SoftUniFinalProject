@model PetHotel.Core.Models.EmployeeModels.TasksCountViewModel
<!DOCTYPE html>
<html lang="en">
    @{
    Layout = "/Views/Shared/_Layout.cshtml";
    }

<head>
  <title>Managment</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container p-3 my-3 border bg-dark text-white">
  <h1>Expected today: @Model.ExpectedCount</h1>
  <p><a class="nav-link text-info" asp-area="Employee" asp-controller="Hotel" asp-action="Today">Manage</a></p>
</div>

<div class="container p-3 my-3 bg-dark text-white">
  <h1>Departures today: @Model.DepartCount</h1>
        <p><a class="nav-link text-info" asp-area="Employee" asp-controller="Hotel" asp-action="Depart">Manage</a></p>
</div>

    <div class="container p-3 my-3 bg-dark text-white">
  <h1>Overdue: @Model.OverdueCount</h1>
        <p><a class="nav-link text-info" asp-area="Employee" asp-controller="Hotel" asp-action="Overdue">Manage</a></p>
</div>

    <div class="container p-3 my-3 bg-dark text-white">
  <h1>All in hotel: @Model.DepartCount</h1>
        <p><a class="nav-link text-info" asp-area="Employee" asp-controller="Hotel" asp-action="AllInHotel">Manage</a></p>
</div>

    <div class="container p-3 my-3 bg-dark text-white">
        <h1>All expected: @Model.TotalCount</h1>
        <p><a class="nav-link text-info" asp-area="Employee" asp-controller="Hotel" asp-action="All">View</a></p>
    </div>

</body>
</html>
