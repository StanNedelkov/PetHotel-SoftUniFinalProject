@model PetHotel.Core.Models.HotelModels.AddGuestViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<head>
   
</head>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            @Html.HiddenFor(x => x.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <label asp-for="CheckInDate" class="control-label"></label>
            <input type="datetime" asp-for="CheckInDate" class="form-control">
            <span asp-validation-for="CheckInDate" class="text-danger"></span>

            <label asp-for="CheckOutDate" class="control-label"></label>
            <input type="datetime" asp-for="CheckOutDate" class="form-control">
            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            
            
            <div class="form-group">
                <input type="submit" value="Add" asp-area="Client" asp-controller="Hotel" class="btn btn-primary" />
            </div>
           
        </form>
    </div>
</div>

