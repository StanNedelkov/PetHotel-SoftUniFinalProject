@model PetHotel.Core.Models.HotelModels.AddGuestViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<head>
   
</head>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Name)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>Make a reservation for @Model.Name</div>

            <label asp-for="CheckInDate" class="control-label"></label>
            <input type="date" asp-for="CheckInDate" class="form-control">
            <span asp-validation-for="CheckInDate" class="text-danger"></span>
          

            <label asp-for="CheckOutDate" class="control-label"></label>
            <input type="date" asp-for="CheckOutDate" class="form-control">
            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            
            
            <div class="form-group">
                <input type="submit" value="Add" asp-area="Client" asp-controller="Hotel" class="btn btn-primary" />
            </div>
           
        </form>
    </div>
</div>

