@using PetHotel.Common;
@using PetHotel.Core.Models.HotelModels;
@model IEnumerable<PetHotel.Core.Models.HotelModels.GuestBasicViewModel>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
 }
    
<head>
    @*<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>*@
</head>

<body>
    <div class="col">
                    <p class="fs-1">
                       Currently in hotel
                    </p>
                        <div class="row  d-flex justify-content-center">
                            @foreach (var pet in Model)
                            {
                                if (pet.Status.ToLower() == GlobalConstants.InProgressStatus.ToLower())
                                 {
                                    <ul class="list-group">
                                     <li class="list-group-item list-group-item-primary">@pet.PetName, @pet.PetType - @pet.CheckInDate-@pet.CheckOutDate</li>
                                    </ul>
                                 } 
                            }
                        </div>
                </div>
    <div class="col">
        <p class="fs-1">
            Reservations
        </p>
        <div class="row  d-flex justify-content-center">
            @foreach (var pet in Model)
            {
                if (pet.Status.ToLower() == GlobalConstants.ExpectedStatus.ToLower())
                {
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-primary">@pet.PetName, @pet.PetType - @pet.CheckInDate-@pet.CheckOutDate</li>
                    <form asp-area="Client" asp-controller="Hotel" asp-action="CancelReserv">
                          <input type="hidden" asp-for="@pet.ReservationId" name="id" />
                          <input type="submit" value="Cancel" class="btn btn-danger" />
                         </form>
                         <form asp-area="Client" asp-controller="Hotel" asp-action="Edit" method="get">
                                 <input type="hidden" asp-for="@pet.PetId" name="Id" />
                            <input type="submit" value="Edit" class="btn btn-outline-info" />
                         </form>
                    </ul>
                }
            }
        </div>
    </div>
    <div class="col">
                    <p class="fs-1">
                       History
                    </p>
                        <div class="row  d-flex justify-content-center">
                            @foreach (var pet in Model)
                            {
                if (pet.Status.ToLower() == GlobalConstants.CompletedStatus.ToLower() || pet.Status.ToLower() == GlobalConstants.CanceledStatus.ToLower())
                {
                                    <ul class="list-group">
                                     <li class="list-group-item list-group-item-primary">@pet.PetName, @pet.PetType - @pet.CheckInDate-@pet.CheckOutDate</li>
                                    </ul>
                                 } 
                            }
                        </div>
                </div>

</body>





