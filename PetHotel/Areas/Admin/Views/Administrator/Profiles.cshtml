@using PetHotel.Common;
@model IEnumerable<PetHotel.Core.Models.UserModels.ProfileViewModel>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    
}
    @foreach (var item in Model)
{   <p>User ID: @item.Id</p>
    <p>User: @item.UserName</p>
    <p>Role: @item.Role</p>
    <p>Name: @item.FirstName</p>
    <p>Last name: @item.LastName</p>
    <p>Email: @item.Email</p>
    <p>Phone: @item.PhoneNumber</p>
    @if (item.IsActive && item.Role != GlobalConstants.AdministratorRoleName)
    {
        <form asp-area="Admin" asp-controller="Administrator" asp-action="DeactivateAccount">
            <input type="hidden" asp-for="@item.Id" name="Id" />
            <input type="submit" value="Deactivate account" class="btn btn-danger" />
        </form>
    }
    @if (!item.IsActive && item.Role != GlobalConstants.AdministratorRoleName)
    {
                <form asp-area="Admin" asp-controller="Administrator" asp-action="ActivateAccount">
                    <input type="hidden" asp-for="@item.Id" name="Id" />
                    <input type="submit" value="Activate account" class="btn btn-info" />
                </form>
    }

}
<div>
    <a class="btn-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
</div>


